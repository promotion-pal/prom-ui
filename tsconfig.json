{
 "compilerOptions": {
   "outDir": "build/esm",
   "module": "esnext",
   "target": "es5",
   "lib": ["es6", "dom", "es2016", "es2017"],
  "jsx": "react-jsx",  
   "declaration": true,
   "declarationDir": "build/types",
   "moduleResolution": "node",
   "allowSyntheticDefaultImports": true,
   "esModuleInterop": true,  
   "importHelpers": true  
 },
 "include": ["src"],
 "exclude": ["node_modules", "build"]
}